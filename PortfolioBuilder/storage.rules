rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile photos
    match /profiles/{userId}/{allPaths=**} {
      // Anyone can read profile photos
      allow read: if true;
      
      // Only the user can upload/update/delete their own profile photos
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Project images
    match /projects/{userId}/{allPaths=**} {
      // Anyone can read project images
      allow read: if true;
      
      // Only authenticated users can upload project images
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}